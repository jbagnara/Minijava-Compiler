class simplearray {
    public static void main(String [] args) {
        int i_size = 7, j_size=7;
        int[][] Arr2D; 
	Arr2D = new int[7][7];
        int i=0, j=0;
			System.out.println(i+j);
        while (i < i_size) {
                System.out.print("i equals ");
                System.out.println(i);
           j = 0;
           while (j < j_size) {
                        Arr2D[i][j] = i+j;
                        j = j+1;
           }
           i = i + 1;
        }
        i=0;
        while (i < i_size) {
             j =0;
             while (j < j_size) {
                System.out.print("Arr2D[");
                System.out.print(i);
                System.out.print("][");
                System.out.print(j);
                System.out.print("]=");
                System.out.print(Arr2D[i][j]);
                System.out.println("\n");
                j = j+2;
             }
             i = i + 2;
        }
    }
}
